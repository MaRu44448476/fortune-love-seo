generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model FortuneHistory {
  id         String   @id @default(cuid())
  bloodType  String
  zodiac     String
  animal     String
  date       DateTime
  score      Int
  luckyColor String
  luckyItem  String
  advice     String
  createdAt  DateTime @default(now())

  @@unique([bloodType, zodiac, animal, date], name: "bloodType_zodiac_animal_date")
}